{% extends "base.html.j2" %}

{% block heading %}Dashboard{% endblock %}

{% block content %}
    <!-- Content Wrapper -->
	<div id="content-wrapper" class="d-flex flex-column"">

        <!-- Main Content -->
        <div id="content">


        <h1 class="h3 mb-2 text-gray-800">Welcome to the Chamelogator Dashboard</h1>
        
        <p class="mb-4">This is the placeholder home page for the web app.</p>



        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">UNDER CONSTRUCTION</h6>
            </div>
            <div class="card-body">


                <img class="img-fluid px-3 px-sm-4 mt-3 mb-4" style="width: 30rem;"
                                src="static/dist/img/undraw_under_construction_46pa.svg">


                <h6>[Just redirects to /data atm] Project Name Search</h5>
                <div id="custom-search-input">
                    <div class="input-group" style="width: 500px">
                        <input type="text" class="search-query form-control" placeholder="Enter project name..." />
                        <span class="input-group-btn" id='searchbutton'>
                            <button class="btn btn-action border" type="button" id="search-button-id">
                                <span class="fas fa-search"></span>
                            </button>
                        </span>
                    </div>
                </div>


            </div>
            <!-- /.panel-body -->

        </div>
        <!-- Main Content -->
   </div>
   <!-- /.Content Wrapper -->

    <!-- jQuery -->
    <script src={{url_for('static', filename="vendor/jQuery-3.3.1/jquery-3.3.1.min.js")}}></script>
    <script>

    var searchbutton = $('#searchbutton').find('button');

    searchbutton.bind("click", function() {window.location = '/data'});
   
    </script>

{% endblock %}

{% block scripts %}


   <!-- DataTables JavaScript -->
   <script src={{url_for('static', filename="vendor/DataTables-1.10.25/js/jquery.dataTables.js")}}></script>
   {# <script src={{url_for('static', filename="vendor/datatables-plugins/dataTables.bootstrap.js")}}></script> #}
   <script src={{url_for('static', filename="vendor/Responsive-2.2.9/js/dataTables.responsive.js")}}></script>

{% endblock %}
